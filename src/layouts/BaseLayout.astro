---
export interface Props {
  title: string;
  description?: string;
  keywords?: string;
  image?: string;
  url?: string;
}

const { 
  title, 
  description = "Deploy private AI with Enclava's confidential computing platform. Process sensitive data with encrypted LLMs, secure RAG pipelines, and TEE protection. Open source & enterprise-ready.",
  keywords = "private AI, confidential computing, secure AI, enterprise AI, data privacy, encrypted AI, on-premise AI, TEE, trusted execution environment, privacy-first AI, HIPAA compliant AI, SOC2 AI platform, Intel SGX, AMD SEV, secure LLM, RAG security",
  image = "/og-image.png",
  url = "https://enclava.ai"
} = Astro.props;

// Generate canonical URL
const canonicalURL = new URL(Astro.url.pathname, Astro.site).href;

// SEO-optimized title and descriptions per page
const seoTitles: Record<string, string> = {
  '/': 'Private AI Platform | Confidential Computing for Enterprise AI - Enclava',
  '/products/managed-cloud': 'Managed Private AI Cloud | Zero Infrastructure, Full Privacy - Enclava',
  '/products/self-hosted': 'Self-Hosted Private AI | Open Source Confidential Computing - Enclava',
  '/services/custom-deployment': 'Enterprise Private AI Deployment | HIPAA & SOC2 Compliant - Enclava',
  '/services/integration-development': 'Private AI Integration Services | Custom Development - Enclava',
  '/case-studies/hardware-manufacturer': 'Hardware Manufacturer Private AI Case Study | Enclava',
  '/case-studies/private-ai-assistant': 'Private AI Assistant Implementation Case Study | Enclava',
  '/404': '404 - Page Not Found | Enclava'
};

const seoDescriptions: Record<string, string> = {
  '/': description,
  '/products/managed-cloud': 'Enclava Managed Cloud: Private AI as a Service with zero infrastructure overhead. Enterprise-grade confidential computing, 99.9% SLA, SOC2 compliant. Join the waitlist.',
  '/products/self-hosted': 'Self-host Enclava\'s open-source private AI platform. Complete control over your confidential computing infrastructure with TEE protection.',
  '/services/custom-deployment': 'Professional Enclava deployment services. Get production-ready private AI in weeks. HIPAA, SOC2 compliance, custom integrations, 24/7 support.',
  '/services/integration-development': 'Custom private AI integration and development services. Connect Enclava to your existing infrastructure with enterprise-grade security.',
  '/case-studies/hardware-manufacturer': 'Learn how a leading hardware manufacturer deployed Enclava for secure AI-powered quality control and proprietary design protection.',
  '/case-studies/private-ai-assistant': 'Discover how Enclava enabled a private AI assistant with complete data privacy for sensitive corporate communications.',
  '/404': 'The page you\'re looking for doesn\'t exist. Return to Enclava\'s private AI platform homepage.'
};

const pageTitle = seoTitles[Astro.url.pathname] || title;
const pageDescription = seoDescriptions[Astro.url.pathname] || description;

// Enhanced structured data with multiple schemas
const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "@id": "https://enclava.ai/#organization",
  "name": "Enclava",
  "alternateName": "Enclava AI",
  "description": "Private AI platform using confidential computing for secure data processing",
  "url": url,
  "logo": {
    "@type": "ImageObject",
    "url": `${url}/favicon.svg`,
    "width": "512",
    "height": "512"
  },
  "sameAs": [
    "https://github.com/enclava-ai",
    "https://www.linkedin.com/company/enclava-ai/",
    "https://twitter.com/enclava_ai"
  ],
  "address": {
    "@type": "PostalAddress",
    "addressCountry": "AE",
    "addressRegion": "Dubai"
  },
  "contactPoint": [{
    "@type": "ContactPoint",
    "contactType": "sales",
    "email": "sales@enclava.ai",
    "url": `${url}#contact`
  }],
  "foundingDate": "2023",
  "founders": [{
    "@type": "Person",
    "name": "Aljaz",
    "url": "https://cal.com/aljaz/enclava"
  }],
  "industry": "Artificial Intelligence",
  "keywords": keywords
};

const softwareApplicationSchema = {
  "@context": "https://schema.org",
  "@type": "SoftwareApplication",
  "@id": "https://enclava.ai/#software",
  "name": "Enclava Platform",
  "description": "Private AI platform with confidential computing for secure LLM inference and RAG pipelines",
  "applicationCategory": "BusinessApplication",
  "operatingSystem": "Linux, Docker, Kubernetes",
  "offers": {
    "@type": "AggregateOffer",
    "priceCurrency": "USD",
    "offerCount": "2",
    "offers": [
      {
        "@type": "Offer",
        "name": "Self-Hosted",
        "description": "Open source self-hosted deployment",
        "price": "0",
        "priceCurrency": "USD"
      },
      {
        "@type": "Offer",
        "name": "Managed Cloud",
        "description": "Fully managed private AI cloud service",
        "priceSpecification": {
          "@type": "UnitPriceSpecification",
          "price": "Contact for pricing",
          "priceCurrency": "USD"
        }
      }
    ]
  },
  "featureList": [
    "Confidential Computing with TEE",
    "End-to-end Encryption",
    "Secure RAG Pipelines",
    "OpenAI-compatible APIs",
    "Document Processing in Enclaves",
    "Workflow Orchestration",
    "HIPAA Compliance Support",
    "SOC2 Type 2 Ready"
  ],
  "softwareVersion": "1.0",
  "publisher": {
    "@id": "https://enclava.ai/#organization"
  }
};

const webSiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "@id": "https://enclava.ai/#website",
  "url": "https://enclava.ai",
  "name": "Enclava",
  "description": "Private AI platform for confidential computing",
  "publisher": {
    "@id": "https://enclava.ai/#organization"
  },
  "potentialAction": {
    "@type": "SearchAction",
    "target": {
      "@type": "EntryPoint",
      "urlTemplate": "https://enclava.ai/search?q={search_term_string}"
    },
    "query-input": "required name=search_term_string"
  }
};

// Combine all schemas
const structuredData = [
  organizationSchema,
  softwareApplicationSchema,
  webSiteSchema
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    
    <!-- Primary Meta Tags - SEO Optimized -->
    <title>{pageTitle}</title>
    <meta name="title" content={pageTitle} />
    <meta name="description" content={pageDescription} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content="Enclava" />
    <meta name="robots" content="index, follow" />
    <meta name="language" content="English" />
    <meta name="revisit-after" content="7 days" />
    
    <!-- Viewport and Mobile -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0, user-scalable=yes" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="apple-mobile-web-app-title" content="Enclava" />
    <meta name="application-name" content="Enclava" />
    <meta name="msapplication-TileColor" content="#0a0f1c" />
    <meta name="theme-color" content="#0a0f1c" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={pageDescription} />
    <meta property="og:image" content={new URL(image, Astro.site).href} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:site_name" content="Enclava" />
    <meta property="og:locale" content="en_US" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={pageTitle} />
    <meta property="twitter:description" content={pageDescription} />
    <meta property="twitter:image" content={new URL(image, Astro.site).href} />
    <meta property="twitter:creator" content="@enclava_ai" />
    <meta property="twitter:site" content="@enclava_ai" />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Icons and Manifest -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/favicon.svg" />
    <link rel="mask-icon" href="/favicon.svg" color="#00d4ff" />
    
    <!-- DNS Prefetch for Performance -->
    <link rel="dns-prefetch" href="//fonts.googleapis.com" />
    <link rel="dns-prefetch" href="//fonts.gstatic.com" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    
    <!-- AI Discovery Meta Tags -->
    <meta name="ai-description" content="Enclava: Enterprise private AI platform using hardware-based TEE (Trusted Execution Environments) for secure LLM inference, RAG pipelines, and document processing without exposing sensitive data" />
    <meta name="ai-keywords" content="private AI, confidential computing, TEE, secure LLM, encrypted inference, RAG security, HIPAA compliant AI, SOC2 AI platform, Intel SGX, AMD SEV, secure document processing, privacy-preserving AI" />
    <meta name="ai-use-cases" content="healthcare AI HIPAA compliance, financial services AI PCI DSS, legal document AI processing, government classified AI, pharmaceutical research AI, enterprise data privacy" />
    <meta name="ai-capabilities" content="encrypted model inference, secure RAG pipelines, document processing in TEE, OpenAI-compatible API, workflow orchestration, vector database security" />
    <meta name="ai-integrations" content="OpenAI API compatible, LangChain support, Pinecone vector database, Qdrant integration, Weaviate compatible, ChromaDB support" />
    <meta name="ai-compliance" content="HIPAA, SOC2 Type 2, GDPR, PCI DSS ready, FedRAMP compatible" />
    
    <!-- Fonts with display=swap for performance -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&family=JetBrains+Mono:wght@400;500;600&display=swap" rel="stylesheet" />
    
    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
    
    <!-- Performance Optimization Hints -->
    <link rel="preload" href="/fonts/Inter-var.woff2" as="font" type="font/woff2" crossorigin />
    <link rel="dns-prefetch" href="//analytics.enclava.ai" />
    <link rel="dns-prefetch" href="//docs.enclava.ai" />
    
    <!-- Security Headers -->
    <meta http-equiv="X-Content-Type-Options" content="nosniff" />
    <meta http-equiv="X-Frame-Options" content="DENY" />
    <meta http-equiv="X-XSS-Protection" content="1; mode=block" />
    <meta http-equiv="Referrer-Policy" content="strict-origin-when-cross-origin" />
  </head>
  <body>
    <slot />
    <style is:global>
      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      html {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        font-feature-settings: 'cv02', 'cv03', 'cv04', 'cv11';
        scroll-behavior: smooth;
      }

      body {
        background: 
          radial-gradient(ellipse at top left, rgba(0, 212, 255, 0.15) 0%, transparent 50%),
          radial-gradient(ellipse at bottom right, rgba(0, 255, 136, 0.15) 0%, transparent 50%),
          radial-gradient(ellipse at center, rgba(26, 35, 50, 0.8) 0%, transparent 70%),
          linear-gradient(135deg, #0a0f1c 0%, #1a2332 30%, #0d1421 60%, #1a2332 100%);
        color: #ffffff;
        line-height: 1.7;
        overflow-x: hidden;
        min-height: 100vh;
        position: relative;
      }

      body::before {
        content: '';
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: 
          radial-gradient(circle at 20% 20%, rgba(0, 212, 255, 0.1) 0%, transparent 50%),
          radial-gradient(circle at 80% 80%, rgba(0, 255, 136, 0.1) 0%, transparent 50%),
          radial-gradient(circle at 40% 60%, rgba(99, 102, 241, 0.05) 0%, transparent 50%);
        pointer-events: none;
        z-index: -1;
        animation: ambientFlow 20s ease-in-out infinite;
      }

      @keyframes ambientFlow {
        0%, 100% {
          transform: scale(1) rotate(0deg);
          opacity: 1;
        }
        50% {
          transform: scale(1.1) rotate(2deg);
          opacity: 0.8;
        }
      }

      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
      }

      .gradient-text {
        background: linear-gradient(
          135deg, 
          #00d4ff 0%, 
          #00ff88 25%, 
          #6366f1 50%, 
          #00d4ff 75%, 
          #00ff88 100%
        );
        background-size: 200% 200%;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        animation: gradientShift 8s ease-in-out infinite;
        font-weight: 800;
        letter-spacing: -0.02em;
      }

      @keyframes gradientShift {
        0%, 100% {
          background-position: 0% 50%;
        }
        50% {
          background-position: 100% 50%;
        }
      }

      .btn-primary {
        position: relative;
        background: linear-gradient(135deg, #00d4ff 0%, #00ff88 100%);
        color: #0a0f1c;
        padding: 16px 32px;
        border: none;
        border-radius: 12px;
        font-weight: 600;
        font-size: 16px;
        cursor: pointer;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        box-shadow: 
          0 8px 32px rgba(0, 212, 255, 0.3),
          0 0 0 1px rgba(255, 255, 255, 0.1),
          inset 0 1px 0 rgba(255, 255, 255, 0.2);
        overflow: hidden;
      }

      .btn-primary::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
        transition: left 0.5s;
      }

      .btn-primary:hover::before {
        left: 100%;
      }

      .btn-primary:hover {
        transform: translateY(-4px) scale(1.02);
        box-shadow: 
          0 20px 40px rgba(0, 212, 255, 0.4),
          0 0 0 1px rgba(255, 255, 255, 0.2),
          inset 0 1px 0 rgba(255, 255, 255, 0.3);
      }

      .btn-primary:active {
        transform: translateY(-2px) scale(1.01);
      }

      .section {
        padding: 120px 0;
        position: relative;
      }

      .section:not(:last-child)::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 80px;
        height: 1px;
        background: linear-gradient(90deg, transparent 0%, rgba(255, 255, 255, 0.1) 50%, transparent 100%);
      }

      .flow-bg {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        overflow: hidden;
        z-index: -1;
      }

      .flow-bg::before {
        content: '';
        position: absolute;
        width: 600px;
        height: 600px;
        background: radial-gradient(circle, rgba(0, 212, 255, 0.1) 0%, transparent 70%);
        border-radius: 50%;
        top: -300px;
        right: -200px;
        animation: float 6s ease-in-out infinite;
      }

      .flow-bg::after {
        content: '';
        position: absolute;
        width: 400px;
        height: 400px;
        background: radial-gradient(circle, rgba(0, 255, 136, 0.1) 0%, transparent 70%);
        border-radius: 50%;
        bottom: -200px;
        left: -100px;
        animation: float 8s ease-in-out infinite reverse;
      }

      @keyframes float {
        0%, 100% {
          transform: translateY(0px) scale(1);
        }
        50% {
          transform: translateY(-20px) scale(1.1);
        }
      }

      .card {
        position: relative;
        background: 
          linear-gradient(135deg, rgba(255, 255, 255, 0.06) 0%, rgba(255, 255, 255, 0.02) 100%);
        backdrop-filter: blur(20px) saturate(1.1);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 24px;
        padding: 40px;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        box-shadow: 
          0 4px 20px rgba(0, 0, 0, 0.08),
          0 1px 0 rgba(255, 255, 255, 0.04);
        overflow: hidden;
      }

      .card:nth-child(2n+1) {
        border-radius: 32px 24px 32px 24px;
      }

      .card:nth-child(2n) {
        border-radius: 24px 32px 24px 32px;
      }

      .card:nth-child(3n) {
        border-radius: 28px;
      }

      .card:hover {
        background: 
          linear-gradient(135deg, rgba(255, 255, 255, 0.08) 0%, rgba(255, 255, 255, 0.04) 100%);
        border-color: rgba(255, 255, 255, 0.12);
        box-shadow: 
          0 8px 32px rgba(0, 0, 0, 0.12),
          0 2px 0 rgba(255, 255, 255, 0.06);
      }

      /* Enhanced Mobile Responsiveness */
      @media (max-width: 768px) {
        .container {
          padding: 0 16px;
        }
        
        .section {
          padding: 60px 0;
        }
        
        .card {
          padding: 24px;
          border-radius: 16px;
        }
        
        .btn-primary {
          min-height: 44px; /* Touch-friendly minimum size */
          padding: 16px 24px;
          font-size: 16px; /* Prevent zoom on iOS */
          border-radius: 8px;
        }
        
        /* Improve text readability on mobile */
        body {
          font-size: 16px; /* Prevent zoom on iOS */
          line-height: 1.6;
        }
        
        /* Optimize gradient animations for mobile performance */
        .gradient-text {
          animation-duration: 12s; /* Slower animation for better mobile performance */
        }
        
        body::before {
          animation-duration: 30s; /* Slower ambient animation */
        }
      }
      
      @media (max-width: 480px) {
        .container {
          padding: 0 12px;
        }
        
        .section {
          padding: 40px 0;
        }
        
        .card {
          padding: 20px;
        }
        
        .btn-primary {
          width: 100%;
          max-width: 320px;
          margin: 0 auto;
        }
      }
      
      /* High DPI displays optimization */
      @media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
        .gradient-text {
          -webkit-font-smoothing: antialiased;
          -moz-osx-font-smoothing: grayscale;
        }
      }
      
      /* Reduce motion for accessibility */
      @media (prefers-reduced-motion: reduce) {
        .gradient-text {
          animation: none;
        }
        
        body::before {
          animation: none;
        }
        
        .btn-primary {
          transition: none;
        }
      }
    </style>
  </body>
</html>