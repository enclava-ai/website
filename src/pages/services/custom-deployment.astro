  }
  
  .benefit-card {
    text-align: center;
    padding: 32px 24px;
  }
  
  .benefit-accent {
    width: 40px;
    height: 4px;
    border-radius: 2px;
    margin-bottom: 20px;
  }
  
  .benefit-accent.speed {
    background: linear-gradient(135deg, #00ff88, #00cc6a);
  }
  
  .benefit-accent.security {
    background: linear-gradient(135deg, #ff6b6b, #cc5555);
  }
  
  .benefit-accent.architecture {
