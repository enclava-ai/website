  }
  
  .service-hero-content {
    max-width: 800px;
    margin: 0 auto;
  }
  
  .breadcrumb {
    margin-bottom: 24px;
    font-size: 0.9rem;
    opacity: 0.8;
  }
  
  .breadcrumb a {
    color: #00d4ff;
    text-decoration: none;
  }
  
  .breadcrumb a:hover {
    text-decoration: underline;
  }
  
  .service-title {
    font-size: 3.5rem;
    font-weight: 700;
    margin-bottom: 24px;
    color: #ffffff;
    line-height: 1.2;
  }
  
  .service-subtitle {
    font-size: 1.25rem;
    margin-bottom: 40px;
    opacity: 0.9;
