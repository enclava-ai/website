---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Enclava: Enterprise AI Platform putting customer privacy first">
  <!-- Navigation -->
  <nav class="nav">
    <div class="container">
      <div class="nav-content">
        <div class="logo">
          <span class="gradient-text">Enclava</span>
        </div>
        <div class="nav-links">
          <a href="#features">Features</a>
          <a href="#case-studies">Examples</a>
          <a href="#why-choose">Why us</a>
          <a href="#contact" class="btn-primary">Get Started</a>
        </div>
        <button class="mobile-menu-toggle" aria-label="Toggle mobile menu">
          <span class="hamburger-line"></span>
          <span class="hamburger-line"></span>
          <span class="hamburger-line"></span>
        </button>
      </div>
      <div class="mobile-menu">
        <a href="#features" class="mobile-menu-item">Features</a>
        <a href="#case-studies" class="mobile-menu-item">Examples</a>
        <a href="#why-choose" class="mobile-menu-item">Why us</a>
        <a href="#contact" class="mobile-menu-item btn-primary">Get Started</a>
      </div>
    </div>
  </nav>

  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-container">
      <div class="hero-content">
        <h1 class="hero-title">
          Run AI on sensitive data without exposing it
        </h1>
        <p class="hero-description">
          Process documents, conversations, and private information with AI while keeping everything encrypted in secure hardware enclaves. No data leaves your control.
        </p>
        <div class="hero-actions">
          <a href="#contact" class="btn-primary">Get Started</a>
          <a href="#features" class="btn-secondary">Learn More</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Overview -->
  <section id="features" class="features-overview section">
    <div class="container">
      <h2 class="section-title">
        What you can build
      </h2>
      <p class="section-subtitle">
        Real applications our customers are running in production today.
      </p>
      
      <div class="features-grid">
        <!-- Intelligent Chatbot Ecosystem -->
        <div class="feature-card card">
          <div class="feature-icon">
            <div class="icon-chat">
              <div class="chat-bubble"></div>
              <div class="chat-bubble"></div>
              <div class="chat-dots"></div>
            </div>
          </div>
          <h3>AI Chatbots</h3>
          <ul>
            <li>Build chatbots that remember conversation context</li>
            <li>Connect to your documents and knowledge base</li>
            <li>Create different AI personalities for different use cases</li>
            <li>All running on your encrypted data</li>
          </ul>
        </div>

        <!-- Advanced Document Intelligence -->
        <div class="feature-card card">
          <div class="feature-icon">
            <div class="icon-document">
              <div class="doc-stack"></div>
              <div class="doc-stack"></div>
              <div class="doc-stack"></div>
              <div class="scan-line"></div>
            </div>
          </div>
          <h3>Document Processing</h3>
          <ul>
            <li>Upload PDFs, Word docs, and text files</li>
            <li>Ask questions about your documents in plain English</li>
            <li>Organize documents into secure collections</li>
            <li>Search across all your content instantly</li>
          </ul>
        </div>

        <!-- Enterprise-Grade Security -->
        <div class="feature-card card">
          <div class="feature-icon">
            <div class="icon-security">
              <div class="shield-outer"></div>
              <div class="shield-inner"></div>
              <div class="lock-symbol"></div>
            </div>
          </div>
          <h3>Security & Access Control</h3>
          <ul>
            <li>Block common attacks automatically</li>
            <li>Set usage limits and budgets for different teams</li>
            <li>Monitor for unusual activity patterns</li>
          </ul>
        </div>

        <!-- Confidential Environment -->
        <div class="feature-card card">
          <div class="feature-icon">
            <div class="icon-confidential">
              <div class="vault-circle"></div>
              <div class="vault-line"></div>
              <div class="vault-line"></div>
              <div class="vault-center"></div>
            </div>
          </div>
          <h3>Confidential Computing</h3>
          <ul>
            <li>AI runs inside secure hardware enclaves</li>
            <li>Your data is encrypted in memory and storage</li>
            <li>Verify that code hasn't been tampered with</li>
            <li>We can't see your data, even if we wanted to</li>
          </ul>
        </div>

        <!-- Workflow Automation Engine -->
        <div class="feature-card card">
          <div class="feature-icon">
            <div class="icon-workflow">
              <div class="workflow-node"></div>
              <div class="workflow-node"></div>
              <div class="workflow-node"></div>
              <div class="workflow-connection"></div>
              <div class="workflow-connection-v"></div>
            </div>
          </div>
          <h3>Workflows</h3>
          <ul>
            <li>Chain multiple AI operations together</li>
            <li>Run workflows in parallel for faster processing</li>
            <li>Handle errors and retries automatically</li>
            <li>Transform data between steps as needed</li>
          </ul>
        </div>

        <!-- Developer-First APIs -->
        <div class="feature-card card">
          <div class="feature-icon">
            <div class="icon-api">
              <div class="api-brackets">&#123;</div>
              <div class="api-brackets">&#125;</div>
              <div class="api-connection"></div>
            </div>
          </div>
          <h3>Developer APIs</h3>
          <ul>
            <li>Drop-in replacement for OpenAI's API</li>
            <li>REST endpoints for all features</li>
            <li>Track usage, costs, and performance</li>
            <li>Extend with custom plugins</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Case Studies -->
  <section id="case-studies" class="case-studies section">
    <div class="container">
      <h2 class="section-title">
        Customer examples
      </h2>
      <p class="section-subtitle">
        How teams are using Enclava to process sensitive data with AI.
      </p>
      
      <div class="case-studies-grid">
        <div class="case-study card">
          <div class="case-study-icon">
            <div class="icon-hardware">
              <div class="chip-circuit"></div>
              <div class="security-layer"></div>
            </div>
          </div>
          <div class="case-study-industry">Hardware Manufacturing</div>
          <h3>Defense Contractor CRM</h3>
          <p class="case-study-description">
            A hardware manufacturer needed to process sensitive customer data for their CRM. Traditional cloud AI was too risky, so they built their system on Enclava to keep everything encrypted.
          </p>
          <div class="case-study-actions">
            <a href="/case-studies/hardware-manufacturer" class="btn-case-study">Read Full Case Study</a>
          </div>
        </div>

        <div class="case-study card">
          <div class="case-study-icon">
            <div class="icon-ai-assistant">
              <div class="signal-waves"></div>
              <div class="privacy-shield"></div>
            </div>
          </div>
          <div class="case-study-industry">Communications Technology</div>
          <h3>Encrypted AI Assistant</h3>
          <p class="case-study-description">
            A team building an AI assistant needed to process conversations without exposing user data. They used Enclava to run AI inference while keeping messages encrypted end-to-end.
          </p>
          <div class="case-study-actions">
            <a href="/case-studies/private-ai-assistant" class="btn-case-study">Read Full Case Study</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Perfect For Section -->
  <section class="perfect-for section">
    <div class="container">
      <h2 class="section-title">
        Good fit if you have
      </h2>
      <div class="perfect-for-grid">
        <div class="perfect-for-card card">
          <div class="perfect-icon">
            <div class="icon-data">
              <div class="data-bar"></div>
              <div class="data-bar"></div>
              <div class="data-bar"></div>
              <div class="shield-overlay"></div>
            </div>
          </div>
          <h3>Sensitive customer data</h3>
        </div>
        <div class="perfect-for-card card">
          <div class="perfect-icon">
            <div class="icon-automation">
              <div class="automation-gear"></div>
              <div class="privacy-lock"></div>
            </div>
          </div>
          <h3>Privacy requirements</h3>
        </div>
        <div class="perfect-for-card card">
          <div class="perfect-icon">
            <div class="icon-compliance">
              <div class="compliance-badge"></div>
              <div class="attestation-mark"></div>
            </div>
          </div>
          <h3>Compliance obligations</h3>
        </div>
        <div class="perfect-for-card card">
          <div class="perfect-icon">
            <div class="icon-documents">
              <div class="doc-grid"></div>
              <div class="analysis-layer"></div>
            </div>
          </div>
          <h3>Lots of documents to process</h3>
        </div>
        <div class="perfect-for-card card">
          <div class="perfect-icon">
            <div class="icon-audit">
              <div class="audit-trail"></div>
              <div class="security-check"></div>
            </div>
          </div>
          <h3>Audit requirements</h3>
        </div>
        <div class="perfect-for-card card">
          <div class="perfect-icon">
            <div class="icon-enterprise">
              <div class="enterprise-network"></div>
              <div class="scalability-arrow"></div>
            </div>
          </div>
          <h3>Need to scale securely</h3>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Choose Enclava -->
  <section id="why-choose" class="why-choose section">
    <div class="container">
      <h2 class="section-title">
        Why choose us
      </h2>
      <div class="why-choose-grid">
        <div class="why-card card">
          <div class="why-icon">
            <div class="icon-security-first">
              <div class="security-layers"></div>
              <div class="foundation-base"></div>
            </div>
          </div>
          <h3>Privacy first</h3>
          <p>Your data stays encrypted, even from us</p>
        </div>
        <div class="why-card card">
          <div class="why-icon">
            <div class="icon-trusted">
              <div class="trust-seal"></div>
              <div class="crypto-verification"></div>
            </div>
          </div>
          <h3>Verifiable security</h3>
          <p>Prove your code is running securely</p>
        </div>
        <div class="why-card card">
          <div class="why-icon">
            <div class="icon-developer">
              <div class="code-blocks"></div>
              <div class="compatibility-layer"></div>
            </div>
          </div>
          <h3>Easy to integrate</h3>
          <p>Drop-in replacement for OpenAI</p>
        </div>
        <div class="why-card card">
          <div class="why-icon">
            <div class="icon-enterprise-ready">
              <div class="scale-grid"></div>
              <div class="monitoring-pulse"></div>
            </div>
          </div>
          <h3>Built for teams</h3>
          <p>Usage controls, monitoring, and collaboration</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section id="contact" class="cta section">
    <div class="container">
      <div class="cta-content">
        <h2>
          Ready to try Enclava?
        </h2>
        <p>Start building AI applications that keep your data private. No long-term contracts required.</p>
        <div class="cta-actions">
          <a href="#" class="btn-primary">Start Free Trial</a>
          <a href="#" class="btn-secondary">Book a Demo</a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Navigation */
  .nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background: rgba(10, 15, 28, 0.9);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    z-index: 1000;
  }

  .nav-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 16px 0;
  }

  .logo {
    font-size: 24px;
    font-weight: 700;
  }

  .nav-links {
    display: flex;
    gap: 32px;
    align-items: center;
  }

  .nav-links a {
    color: #ffffff;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s ease;
  }

  .nav-links a:not(.btn-primary):hover {
    color: #00d4ff;
  }

  /* Mobile Navigation */
  .mobile-menu-toggle {
    display: none;
    flex-direction: column;
    justify-content: space-around;
    width: 24px;
    height: 24px;
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 0;
    z-index: 1001;
  }

  .hamburger-line {
    width: 100%;
    height: 2px;
    background: #ffffff;
    transition: all 0.3s ease;
  }

  .mobile-menu-toggle.active .hamburger-line:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
  }

  .mobile-menu-toggle.active .hamburger-line:nth-child(2) {
    opacity: 0;
  }

  .mobile-menu-toggle.active .hamburger-line:nth-child(3) {
    transform: rotate(-45deg) translate(7px, -6px);
  }

  .mobile-menu {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    background: rgba(10, 15, 28, 0.95);
    backdrop-filter: blur(10px);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding: 20px 0;
    z-index: 1000;
  }

  .mobile-menu.active {
    display: block;
  }

  .mobile-menu-item {
    display: block;
    padding: 12px 20px;
    color: #ffffff;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s ease;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .mobile-menu-item:not(.btn-primary):hover {
    color: #00d4ff;
    background: rgba(0, 212, 255, 0.1);
  }

  .mobile-menu-item.btn-primary {
    margin: 16px 20px 0;
    text-align: center;
    border-radius: 8px;
    border-bottom: none;
  }

  /* Hero Section */
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .hero::before {
    content: '';
    position: absolute;
    top: 20%;
    left: 10%;
    width: 300px;
    height: 300px;
    background: radial-gradient(circle, rgba(0, 212, 255, 0.06) 0%, transparent 70%);
    border-radius: 50%;
    filter: blur(40px);
    z-index: 1;
  }

  .hero::after {
    content: '';
    position: absolute;
    bottom: 20%;
    right: 15%;
    width: 200px;
    height: 200px;
    background: radial-gradient(circle, rgba(0, 255, 136, 0.04) 0%, transparent 70%);
    border-radius: 50%;
    filter: blur(30px);
    z-index: 1;
  }

  .hero-container {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 40px;
    position: relative;
    z-index: 2;
  }

  .hero-content {
    max-width: 680px;
    margin: 0 auto;
  }

  .hero-title {
    font-size: 4.2rem;
    font-weight: 600;
    line-height: 1.08;
    margin-bottom: 40px;
    letter-spacing: -0.025em;
    background: linear-gradient(135deg, #ffffff 0%, rgba(255, 255, 255, 0.8) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-description {
    font-size: 1.35rem;
    line-height: 1.55;
    color: rgba(255, 255, 255, 0.75);
    margin-bottom: 56px;
    font-weight: 400;
    max-width: 580px;
    margin-left: auto;
    margin-right: auto;
    margin-bottom: 56px;
  }

  .hero-actions {
    display: flex;
    gap: 20px;
    justify-content: center;
    align-items: center;
  }

  .btn-secondary {
    background: transparent;
    color: rgba(255, 255, 255, 0.9);
    padding: 16px 32px;
    border: none;
    border-radius: 8px;
    font-weight: 500;
    font-size: 16px;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .btn-secondary:hover {
    color: #ffffff;
    background: rgba(255, 255, 255, 0.05);
  }

  /* Features Section */
  .section {
    position: relative;
    overflow: hidden;
  }

  .section:nth-child(even) {
    background: linear-gradient(180deg, transparent 0%, rgba(255, 255, 255, 0.01) 50%, transparent 100%);
  }

  .section-title {
    font-size: 2.8rem;
    font-weight: 700;
    text-align: center;
    margin-bottom: 24px;
    letter-spacing: -0.02em;
    background: linear-gradient(135deg, #ffffff 0%, rgba(255, 255, 255, 0.85) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .section-subtitle {
    font-size: 1.25rem;
    text-align: center;
    color: rgba(255, 255, 255, 0.7);
    max-width: 720px;
    margin: 0 auto 80px;
    line-height: 1.6;
    font-weight: 400;
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(380px, 1fr));
    gap: 40px 32px;
    margin-top: 80px;
    position: relative;
  }

  .feature-card {
    text-align: left;
    transform: translateY(0);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
  }

  .feature-card:nth-child(even) {
    transform: translateY(20px);
  }

  .feature-card:nth-child(3n) {
    transform: translateY(10px);
  }

  .feature-card:hover {
    transform: translateY(-8px);
  }

  .feature-card:nth-child(even):hover {
    transform: translateY(12px);
  }

  .feature-card:nth-child(3n):hover {
    transform: translateY(2px);
  }

  .feature-icon {
    width: 64px;
    height: 64px;
    margin-bottom: 24px;
    position: relative;
  }

  .feature-card h3 {
    font-size: 1.3rem;
    font-weight: 700;
    margin-bottom: 20px;
    color: #ffffff;
  }

  .feature-card ul {
    list-style: none;
  }

  .feature-card li {
    margin-bottom: 12px;
    padding-left: 20px;
    position: relative;
    opacity: 0.9;
    line-height: 1.5;
  }

  .feature-card li::before {
    content: '→';
    position: absolute;
    left: 0;
    color: #00ff88;
    font-weight: bold;
  }

  /* Geometric Icons */
  .icon-chat {
    width: 100%;
    height: 100%;
    position: relative;
  }

  .chat-bubble {
    position: absolute;
    width: 20px;
    height: 14px;
    background: linear-gradient(135deg, #00d4ff, #00ff88);
    border-radius: 8px 8px 8px 2px;
  }

  .chat-bubble:first-child {
    top: 10px;
    left: 8px;
  }

  .chat-bubble:nth-child(2) {
    top: 28px;
    left: 20px;
    border-radius: 8px 8px 2px 8px;
  }

  .chat-dots {
    position: absolute;
    top: 18px;
    left: 12px;
    width: 8px;
    height: 8px;
    background: #ffffff;
    border-radius: 50%;
    opacity: 0.8;
  }

  .chat-dots::before,
  .chat-dots::after {
    content: '';
    position: absolute;
    width: 4px;
    height: 4px;
    background: #ffffff;
    border-radius: 50%;
    top: 2px;
  }

  .chat-dots::before {
    left: -8px;
  }

  .chat-dots::after {
    left: 8px;
  }

  .icon-document {
    width: 100%;
    height: 100%;
    position: relative;
  }

  .doc-stack {
    position: absolute;
    width: 24px;
    height: 32px;
    background: linear-gradient(135deg, #00d4ff 0%, rgba(0, 212, 255, 0.3) 100%);
    border-radius: 4px 4px 4px 4px;
    border: 1px solid #00d4ff;
  }

  .doc-stack:first-child {
    top: 6px;
    left: 12px;
    z-index: 3;
  }

  .doc-stack:nth-child(2) {
    top: 10px;
    left: 16px;
    z-index: 2;
    opacity: 0.7;
  }

  .doc-stack:nth-child(3) {
    top: 14px;
    left: 20px;
    z-index: 1;
    opacity: 0.4;
  }

  .scan-line {
    position: absolute;
    top: 20px;
    left: 0;
    right: 0;
    height: 2px;
    background: #00ff88;
    opacity: 0.8;
    animation: scan 2s ease-in-out infinite;
  }

  @keyframes scan {
    0%, 100% { transform: translateX(-100%); }
    50% { transform: translateX(100%); }
  }

  .icon-security {
    width: 100%;
    height: 100%;
    position: relative;
  }

  .shield-outer {
    position: absolute;
    top: 8px;
    left: 20px;
    width: 24px;
    height: 32px;
    background: linear-gradient(135deg, #00d4ff, #00ff88);
    clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);
  }

  .shield-inner {
    position: absolute;
    top: 12px;
    left: 23px;
    width: 18px;
    height: 24px;
    background: rgba(10, 15, 28, 0.8);
    clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);
  }

  .lock-symbol {
    position: absolute;
    top: 18px;
    left: 28px;
    width: 8px;
    height: 8px;
    border: 2px solid #00ff88;
    border-radius: 2px;
  }

  .icon-confidential {
    width: 100%;
    height: 100%;
    position: relative;
  }

  .vault-circle {
    position: absolute;
    top: 12px;
    left: 12px;
    width: 40px;
    height: 40px;
    border: 3px solid #00d4ff;
    border-radius: 50%;
  }

  .vault-line {
    position: absolute;
    top: 28px;
    left: 18px;
    width: 28px;
    height: 2px;
    background: #00ff88;
  }

  .vault-line:nth-child(3) {
    top: 34px;
  }

  .vault-center {
    position: absolute;
    top: 26px;
    left: 26px;
    width: 12px;
    height: 12px;
    background: #00ff88;
    border-radius: 50%;
  }

  .icon-workflow {
    width: 100%;
    height: 100%;
    position: relative;
  }

  .workflow-node {
    position: absolute;
    width: 12px;
    height: 12px;
    background: #00d4ff;
    border-radius: 50%;
  }

  .workflow-node:first-child {
    top: 8px;
    left: 26px;
  }

  .workflow-node:nth-child(2) {
    top: 26px;
    left: 8px;
  }

  .workflow-node:nth-child(3) {
    top: 26px;
    left: 44px;
  }

  .workflow-connection {
    position: absolute;
    top: 13px;
    left: 18px;
    width: 16px;
    height: 2px;
    background: #00ff88;
    transform: rotate(-45deg);
  }

  .workflow-connection-v {
    position: absolute;
    top: 13px;
    left: 38px;
    width: 16px;
