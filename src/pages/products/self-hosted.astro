---
import BaseLayout from '../../layouts/BaseLayout.astro';
---

<BaseLayout title="Self-Hosted Enclava: On-Premise Private AI | Enclava">
  <!-- Navigation -->
  <nav class="nav" role="navigation" aria-label="Main navigation">
    <div class="container">
      <div class="nav-content">
        <div class="logo">
          <a href="/" aria-label="Enclava - Home">
            <span class="gradient-text">Enclava</span>
          </a>
        </div>
        <div class="nav-links" role="menubar">
          <a href="/#features" role="menuitem">Features</a>
          <a href="/#why-choose" role="menuitem">Why Enclava</a>
          <div class="nav-dropdown" role="menuitem" aria-haspopup="true">
            <a href="#" class="nav-dropdown-toggle" aria-expanded="false" role="button">Products <span class="dropdown-arrow" aria-hidden="true">▾</span></a>
            <div class="nav-dropdown-menu" role="menu">
              <a href="/products/self-hosted" class="nav-dropdown-item" role="menuitem">Self hosted</a>
              <a href="/products/managed-cloud" class="nav-dropdown-item" role="menuitem">Managed cloud <span style="opacity: 0.6; font-size: 0.85em;">(coming soon)</span></a>
            </div>
          </div>
          <div class="nav-dropdown" role="menuitem" aria-haspopup="true">
            <a href="#" class="nav-dropdown-toggle" aria-expanded="false" role="button">Services <span class="dropdown-arrow" aria-hidden="true">▾</span></a>
            <div class="nav-dropdown-menu" role="menu">
              <a href="/services/custom-deployment" class="nav-dropdown-item" role="menuitem">Custom deployment</a>
              <a href="/services/integration-development" class="nav-dropdown-item" role="menuitem">Integration development</a>
            </div>
          </div>
          <div class="nav-dropdown" role="menuitem" aria-haspopup="true">
            <a href="#" class="nav-dropdown-toggle" aria-expanded="false" role="button">Resources <span class="dropdown-arrow" aria-hidden="true">▾</span></a>
            <div class="nav-dropdown-menu" role="menu">
              <a href="https://docs.enclava.ai" target="_blank" rel="noopener noreferrer" class="nav-dropdown-item" role="menuitem">Documentation</a>
              <a href="https://github.com/enclava-ai/enclava" target="_blank" rel="noopener noreferrer" class="nav-dropdown-item" role="menuitem">Github</a>
            </div>
          </div>
          <a href="#contact" class="btn-primary" role="button">Get started</a>
        </div>
        <button class="mobile-menu-toggle" aria-label="Toggle mobile menu" aria-expanded="false" type="button">
          <span class="hamburger-line" aria-hidden="true"></span>
          <span class="hamburger-line" aria-hidden="true"></span>
          <span class="hamburger-line" aria-hidden="true"></span>
        </button>
      </div>
      <div class="mobile-menu" role="menu" aria-label="Mobile navigation menu">
        <a href="/#features" class="mobile-menu-item" role="menuitem">Features</a>
        <a href="/#why-choose" class="mobile-menu-item" role="menuitem">Why Enclava</a>
        <div class="mobile-menu-section">
          <div class="mobile-menu-label">Products</div>
          <a href="/products/self-hosted" class="mobile-menu-item mobile-menu-subitem" role="menuitem">Self hosted</a>
          <a href="/products/managed-cloud" class="mobile-menu-item mobile-menu-subitem" role="menuitem">Managed cloud <span style="opacity: 0.6; font-size: 0.85em;">(coming soon)</span></a>
        </div>
        <div class="mobile-menu-section">
          <div class="mobile-menu-label">Services</div>
          <a href="/services/custom-deployment" class="mobile-menu-item mobile-menu-subitem" role="menuitem">Custom deployment</a>
          <a href="/services/integration-development" class="mobile-menu-item mobile-menu-subitem" role="menuitem">Integration development</a>
        </div>
        <div class="mobile-menu-section">
          <div class="mobile-menu-label">Resources</div>
          <a href="https://docs.enclava.ai" target="_blank" rel="noopener noreferrer" class="mobile-menu-item mobile-menu-subitem" role="menuitem">Documentation</a>
          <a href="https://github.com/enclava-ai/enclava" target="_blank" rel="noopener noreferrer" class="mobile-menu-item mobile-menu-subitem" role="menuitem">Github</a>
        </div>
        <a href="#contact" class="mobile-menu-item btn-primary" role="button">Get started</a>
      </div>
    </div>
  </nav>

  <!-- Hero Section -->
  <main>
    <section class="product-hero section" role="banner" aria-labelledby="hero-title">
      <div class="container">
        <div class="product-hero-content">
          <div class="breadcrumb">
            <a href="/">Home</a> → <a href="/#contact">Products</a> → <span>Self-Hosted</span>
          </div>
          <h1 id="hero-title" class="product-title">
            Self-Hosted <span class="gradient-text">Enclava</span>
          </h1>
          <p class="product-subtitle">
            Deploy private AI in your environment with full control. Open-source, secure by design, and ready for production workloads.
          </p>
          <div class="hero-actions">
            <a href="https://github.com/enclava-ai/enclava" target="_blank" rel="noopener noreferrer" class="btn-primary" role="button">
              View on GitHub
            </a>
        </div>
      </div>
    </section>

    <!-- Key Benefits -->
    <section class="benefits section">
      <div class="container">
        <h2 class="section-title">Why Self-Host?</h2>
        <div class="benefits-grid">
          <div class="benefit-card card">
            <div class="benefit-accent control"></div>
            <h3>Complete Control</h3>
            <p>Deploy on your infrastructure with full administrative access. No third-party dependencies for your sensitive data.</p>
          </div>
          <div class="benefit-card card">
            <div class="benefit-accent security"></div>
            <h3>Maximum Security</h3>
            <p>Keep your data within your security perimeter. Meet the strictest compliance requirements with on-premise deployment.</p>
          </div>
          <div class="benefit-card card">
            <div class="benefit-accent customization"></div>
            <h3>Full Customization</h3>
            <p>Modify, extend, and integrate freely. Access to source code and unlimited customization options.</p>
          </div>
          <div class="benefit-card card">
            <div class="benefit-accent cost"></div>
            <h3>Cost Predictable</h3>
            <p>Pay once, use forever. No per-token charges or monthly subscriptions. Scale without additional licensing costs.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Deployment Options -->
    <section class="deployment-options section">
      <div class="container">
        <h2 class="section-title">Deployment Options</h2>
        <div class="deployment-grid">

          
          <div class="deployment-card card featured">
            <h3>Production Ready</h3>
            <p class="deployment-desc">Scalable and secure for enterprise workloads</p>
            <ul class="deployment-features">
              <li>Docker deploymed</li>
              <li>PostgreSQL cluster</li>
              <li>Load balancing & auto-scaling</li>
              <li>High availability setup</li>
            </ul>
            <div class="deployment-action">
              <a href="#contact" class="btn-primary">Get deployment guide</a>
            </div>
          </div>
          
          <div class="deployment-card card">
            <h3>Custom</h3>
            <p class="deployment-desc">Custom deployment with professional support</p>
            <ul class="deployment-features">
              <li>We deploy it for you</li>
              <li>Custom integrations</li>
              <li>Dedicated support</li>
              <li>Training & onboarding</li>
            </ul>
            <div class="deployment-action">
              <a href="/services/custom-deployment" class="btn-secondary">Learn more</a>
            </div>
          </div>
        </div>
      </div>
    </section>


    <!-- Contact Section -->
    <section id="contact" class="contact section">
      <div class="container">
        <div class="contact-content">
          <h2 class="section-title">Ready to Deploy?</h2>
          <p class="section-subtitle">
            Get started with self-hosted Enclava today or talk to our team about your specific requirements.
          </p>
          
          <div class="contact-options">
            <div class="contact-card card">
              <div class="contact-accent quickstart"></div>
              <h3>Quick Start</h3>
              <p>Follow our installation guide and be running in minutes</p>
              <a href="https://docs.enclava.ai/installation" target="_blank" rel="noopener noreferrer" class="btn-primary">View installation guide</a>
            </div>
            
            <div class="contact-card card">
              <div class="contact-accent help"></div>
              <h3>Get Help</h3>
              <p>Talk to our team about deployment, scaling, or integration questions</p>
              <form class="contact-form">
                <input type="email" placeholder="Your email" required>
                <textarea placeholder="Tell us about your requirements" rows="3" required></textarea>
                <button type="submit" class="btn-primary">Send message</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <!-- Footer -->
  <footer class="footer">
    <div class="container">
      <div class="footer-content">
        <div class="footer-logo">
          <span class="gradient-text">Enclava</span>
        </div>
        <div class="footer-social">
          <a href="https://github.com/enclava-ai" target="_blank" class="social-link" aria-label="GitHub">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
