---
import BaseLayout from '../../layouts/BaseLayout.astro';
---

<BaseLayout title="Managed Cloud Enclava: Private AI as a Service | Enclava">
  <!-- Navigation -->
  <nav class="nav" role="navigation" aria-label="Main navigation">
    <div class="container">
      <div class="nav-content">
        <div class="logo">
          <a href="/" aria-label="Enclava - Home">
            <span class="gradient-text">Enclava</span>
          </a>
        </div>
        <div class="nav-links" role="menubar">
          <a href="/#features" role="menuitem">Features</a>
          <a href="/#why-choose" role="menuitem">Why Enclava</a>
          <div class="nav-dropdown" role="menuitem" aria-haspopup="true">
            <a href="#" class="nav-dropdown-toggle" aria-expanded="false" role="button">Products <span class="dropdown-arrow" aria-hidden="true">▾</span></a>
            <div class="nav-dropdown-menu" role="menu">
              <a href="/products/self-hosted" class="nav-dropdown-item" role="menuitem">Self hosted</a>
              <a href="/products/managed-cloud" class="nav-dropdown-item" role="menuitem">Managed cloud <span style="opacity: 0.6; font-size: 0.85em;">(coming soon)</span></a>
            </div>
          </div>
          <div class="nav-dropdown" role="menuitem" aria-haspopup="true">
            <a href="#" class="nav-dropdown-toggle" aria-expanded="false" role="button">Services <span class="dropdown-arrow" aria-hidden="true">▾</span></a>
            <div class="nav-dropdown-menu" role="menu">
              <a href="/services/custom-deployment" class="nav-dropdown-item" role="menuitem">Custom deployment</a>
              <a href="/services/integration-development" class="nav-dropdown-item" role="menuitem">Integration development</a>
            </div>
          </div>
          <div class="nav-dropdown" role="menuitem" aria-haspopup="true">
            <a href="#" class="nav-dropdown-toggle" aria-expanded="false" role="button">Resources <span class="dropdown-arrow" aria-hidden="true">▾</span></a>
            <div class="nav-dropdown-menu" role="menu">
              <a href="https://docs.enclava.ai" target="_blank" rel="noopener noreferrer" class="nav-dropdown-item" role="menuitem">Documentation</a>
              <a href="https://github.com/enclava-ai/enclava" target="_blank" rel="noopener noreferrer" class="nav-dropdown-item" role="menuitem">Github</a>
            </div>
          </div>
          <a href="#waitlist" class="btn-primary" role="button">Join waitlist</a>
        </div>
        <button class="mobile-menu-toggle" aria-label="Toggle mobile menu" aria-expanded="false" type="button">
          <span class="hamburger-line" aria-hidden="true"></span>
          <span class="hamburger-line" aria-hidden="true"></span>
          <span class="hamburger-line" aria-hidden="true"></span>
        </button>
      </div>
      <div class="mobile-menu" role="menu" aria-label="Mobile navigation menu">
        <a href="/#features" class="mobile-menu-item" role="menuitem">Features</a>
        <a href="/#why-choose" class="mobile-menu-item" role="menuitem">Why Enclava</a>
        <div class="mobile-menu-section">
          <div class="mobile-menu-label">Products</div>
          <a href="/products/self-hosted" class="mobile-menu-item mobile-menu-subitem" role="menuitem">Self hosted</a>
          <a href="/products/managed-cloud" class="mobile-menu-item mobile-menu-subitem" role="menuitem">Managed cloud <span style="opacity: 0.6; font-size: 0.85em;">(coming soon)</span></a>
        </div>
        <div class="mobile-menu-section">
          <div class="mobile-menu-label">Services</div>
          <a href="/services/custom-deployment" class="mobile-menu-item mobile-menu-subitem" role="menuitem">Custom deployment</a>
          <a href="/services/integration-development" class="mobile-menu-item mobile-menu-subitem" role="menuitem">Integration development</a>
        </div>
        <div class="mobile-menu-section">
          <div class="mobile-menu-label">Resources</div>
          <a href="https://docs.enclava.ai" target="_blank" rel="noopener noreferrer" class="mobile-menu-item mobile-menu-subitem" role="menuitem">Documentation</a>
          <a href="https://github.com/enclava-ai/enclava" target="_blank" rel="noopener noreferrer" class="mobile-menu-item mobile-menu-subitem" role="menuitem">Github</a>
        </div>
        <a href="#waitlist" class="mobile-menu-item btn-primary" role="button">Join waitlist</a>
      </div>
    </div>
  </nav>

  <!-- Hero Section -->
  <main>
    <section class="product-hero section" role="banner" aria-labelledby="hero-title">
      <div class="container">
        <div class="product-hero-content">
          <div class="breadcrumb">
            <a href="/">Home</a> → <a href="/#contact">Products</a> → <span>Managed Cloud</span>
          </div>
          <div class="coming-soon-badge">Coming Soon</div>
          <h1 id="hero-title" class="product-title">
            Managed <span class="gradient-text">Enclava</span> Cloud
          </h1>
          <p class="product-subtitle">
            Private AI as a service. All the power of Enclava without the operational overhead. Launching Q2 2025.
          </p>
          <div class="hero-actions">
            <a href="#waitlist" class="btn-primary" role="button">
              Join early access
            </a>
            <a href="/#waitlist" class="btn-secondary" role="button">Join waitlist</a>
          </div>
        </div>
      </div>
    </section>

    <!-- What's Coming -->
    <section class="features-preview section">
      <div class="container">
        <h2 class="section-title">What's Coming in Managed Cloud</h2>
        <p class="section-subtitle">
          Experience the full power of private AI without managing infrastructure
        </p>
        
        <div class="preview-grid">
          <div class="preview-card card">
            <div class="preview-accent infrastructure"></div>
            <h3>Zero Infrastructure</h3>
            <p>No servers to manage, no scaling concerns, no updates to handle. We run everything for you in confidential computing environments.</p>
            <ul class="preview-features">
              <li>Automatic scaling</li>
              <li>99.9% uptime SLA</li>
              <li>Global edge deployment</li>
            </ul>
          </div>
          
          <div class="preview-card card">
            <div class="preview-accent security"></div>
            <h3>Same Security Guarantee</h3>
            <p>Your data remains encrypted even from us. Built on the same confidential computing foundation as self-hosted deployments.</p>
            <ul class="preview-features">
              <li>Encrypted in use, at rest, in transit</li>
              <li>Remote attestation</li>
              <li>Zero-knowledge operations</li>
            </ul>
          </div>
          
          <div class="preview-card card">
            <div class="preview-accent developer"></div>
            <h3>Developer Friendly</h3>
            <p>Same APIs, same workflows, same integrations as self-hosted. Migrate existing deployments seamlessly.</p>
            <ul class="preview-features">
              <li>Compatible APIs</li>
              <li>One-click migration</li>
              <li>SDK support</li>
            </ul>
          </div>
          
          <div class="preview-card card">
            <div class="preview-accent analytics"></div>
            <h3>Usage Analytics</h3>
            <p>Built-in monitoring, usage analytics, and cost optimization without compromising privacy.</p>
            <ul class="preview-features">
              <li>Real-time dashboards</li>
              <li>Cost optimization</li>
              <li>Performance insights</li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Pricing Model -->
    <section class="pricing-model section">
      <div class="container">
        <h2 class="section-title">Flexible Hybrid Pricing</h2>
        <p class="section-subtitle">Predictable subscription base with usage flexibility</p>
        
        <div class="pricing-explanation card">
          <div class="pricing-overview">
            <h3>How Our Pricing Works</h3>
            <p>
              Our hybrid pricing model combines the predictability of subscription billing with the flexibility of usage-based pricing, 
              ensuring you only pay for what you need while maintaining cost predictability.
            </p>
          </div>
          
          <div class="pricing-components">
            <div class="component-item">
              <div class="component-accent subscription"></div>
              <div class="component-content">
                <h4>Monthly Subscription</h4>
                <p>Fixed monthly fee includes base infrastructure, support, and generous included usage allowances</p>
              </div>
            </div>
            
            <div class="component-item">
              <div class="component-accent usage"></div>
              <div class="component-content">
                <h4>Usage-Based Add-ons</h4>
                <p>Additional charges only apply when you exceed your included usage limits - scale seamlessly as you grow</p>
              </div>
            </div>
            
            <div class="component-item">
              <div class="component-accent volume"></div>
              <div class="component-content">
                <h4>Volume Discounts</h4>
                <p>Automatic tiered pricing ensures costs decrease as your usage increases - no surprises or bill shock</p>
              </div>
            </div>
          </div>
          
          <div class="pricing-benefits">
            <h4>Pricing Benefits</h4>
            <div class="benefits-list">
              <div class="benefit-item">✓ Predictable monthly costs with included usage</div>
              <div class="benefit-item">✓ No upfront commitments or long-term contracts</div>
              <div class="benefit-item">✓ Transparent usage tracking and billing alerts</div>
              <div class="benefit-item">✓ Volume discounts that scale with your growth</div>
            </div>
          </div>
        </div>
        
        <div class="pricing-note">
          <p><strong>Early Access Benefits:</strong> Join the waitlist for exclusive preview access, founding member pricing, and priority support during beta.</p>
        </div>
      </div>
    </section>


    <!-- Waitlist Section -->
    <section id="waitlist" class="waitlist section">
      <div class="container">
        <div class="waitlist-content">
          <h2 class="section-title">Join the Managed Cloud Waitlist</h2>
          <p class="section-subtitle">
            Be among the first to experience private AI without infrastructure complexity
          </p>
          
          <div class="waitlist-benefits">
            <div class="waitlist-benefit">
              <div class="benefit-accent early"></div>
              <div>
                <h3>Early Access</h3>
                <p>Get beta access before public launch</p>
              </div>
            </div>
            <div class="waitlist-benefit">
              <div class="benefit-accent pricing"></div>
              <div>
                <h3>Founding Member Pricing</h3>
                <p>Special pricing for early supporters</p>
              </div>
            </div>
            <div class="waitlist-benefit">
              <div class="benefit-accent support"></div>
              <div>
                <h3>Priority Support</h3>
                <p>Direct line to our engineering team</p>
              </div>
            </div>
          </div>
          
          <form id="waitlist-form" class="waitlist-form">
            <div class="form-group">
              <input type="email" name="email" placeholder="Enter your email address" required>
              <input type="text" name="honeypot" class="honeypot" tabindex="-1" autocomplete="off">
            </div>
            <div class="form-group">
              <select name="company_size" required>
                <option value="">Company size</option>
                <option value="1-10">1-10 employees</option>
                <option value="11-50">11-50 employees</option>
                <option value="51-200">51-200 employees</option>
                <option value="201-1000">201-1000 employees</option>
                <option value="1000+">1000+ employees</option>
              </select>
            </div>
            <div class="form-group">
              <textarea name="use_case" placeholder="Tell us about your use case (optional)" rows="3"></textarea>
            </div>
            <button type="submit" class="btn-primary">
              <span class="button-text">Join early access</span>
              <span class="loading-spinner" style="display: none;">⟳</span>
            </button>
          </form>
        </div>
      </div>
    </section>
  </main>

  <!-- Footer -->
  <footer class="footer">
    <div class="container">
      <div class="footer-content">
        <div class="footer-logo">
          <span class="gradient-text">Enclava</span>
        </div>
        <div class="footer-social">
          <a href="https://github.com/enclava-ai" target="_blank" class="social-link" aria-label="GitHub">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
            </svg>
          </a>
          <a href="https://www.linkedin.com/company/enclava-ai/" target="_blank" class="social-link" aria-label="LinkedIn">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
        </div>
      </div>
      <div class="footer-copyright">
        <p>&copy; 2025 All rights reserved by Codepnx Technologies - FZCO</p>
      </div>
    </div>
  </footer>
</BaseLayout>

<style>
  /* Navigation Styles */
  .nav { position: fixed; top: 0; left: 0; right: 0; background: rgba(10, 15, 28, 0.9); backdrop-filter: blur(10px); border-bottom: 1px solid rgba(255, 255, 255, 0.1); z-index: 1000; }
  .nav-content { display: flex; justify-content: space-between; align-items: center; padding: 16px 0; }
  .logo { font-size: 24px; font-weight: 700; }
  .nav-links { display: flex; gap: 24px; align-items: center; }
  .nav-links > a:not(.btn-primary) { color: #ffffff; text-decoration: none; font-weight: 500; transition: color 0.3s ease; padding: 12px 16px; border-radius: 8px; white-space: nowrap; }
  .nav-links > a:not(.btn-primary):hover { color: #00d4ff; background: rgba(0, 212, 255, 0.05); }

  /* Navigation Dropdown */
  .nav-dropdown { position: relative; display: inline-block; }
  .nav-dropdown-toggle { color: #ffffff; text-decoration: none; font-weight: 500; transition: color 0.3s ease; cursor: pointer; display: flex; align-items: center; padding: 12px 16px; border-radius: 8px; white-space: nowrap; }
  .nav-dropdown-toggle:hover { color: #00d4ff; background: rgba(0, 212, 255, 0.05); }
  .dropdown-arrow { font-size: 0.8em; margin-left: 8px; transition: transform 0.3s ease; display: inline-block; }
  .nav-dropdown.active .dropdown-arrow { transform: rotate(180deg); }
  .nav-dropdown-menu { position: absolute; top: calc(100% + 12px); left: 0; background: rgba(10, 15, 28, 0.98); backdrop-filter: blur(15px); border: 1px solid rgba(255, 255, 255, 0.15); border-radius: 12px; min-width: 220px; padding: 8px 0; opacity: 0; visibility: hidden; transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1); z-index: 1001; box-shadow: 0 10px 40px rgba(0, 0, 0, 0.4); pointer-events: none; transform: translateY(-10px); }
  .nav-dropdown.active .nav-dropdown-menu { opacity: 1; visibility: visible; transform: translateY(0); pointer-events: auto; }
  .nav-dropdown-item { display: block; padding: 12px 20px; color: rgba(255, 255, 255, 0.9); text-decoration: none; font-weight: 400; transition: all 0.3s ease; white-space: nowrap; }
  .nav-dropdown-item:hover { color: #00d4ff; background: rgba(0, 212, 255, 0.1); padding-left: 24px; }
  .nav-dropdown-item:first-child { border-radius: 8px 8px 0 0; }
  .nav-dropdown-item:last-child { border-radius: 0 0 8px 8px; }
  .nav-dropdown:nth-child(3) .nav-dropdown-menu { left: 0; }
  .nav-dropdown:nth-child(4) .nav-dropdown-menu { left: -50%; }
  .nav-dropdown:nth-child(5) .nav-dropdown-menu { left: -100%; }

  /* Mobile Navigation */
  .mobile-menu-toggle { display: none; flex-direction: column; justify-content: space-around; width: 24px; height: 24px; background: transparent; border: none; cursor: pointer; padding: 0; z-index: 1001; }
  .hamburger-line { width: 100%; height: 2px; background: #ffffff; transition: all 0.3s ease; }
  .mobile-menu-toggle.active .hamburger-line:nth-child(1) { transform: rotate(45deg) translate(5px, 5px); }
  .mobile-menu-toggle.active .hamburger-line:nth-child(2) { opacity: 0; }
  .mobile-menu-toggle.active .hamburger-line:nth-child(3) { transform: rotate(-45deg) translate(7px, -6px); }
  .mobile-menu { display: none; position: absolute; top: 100%; left: 0; right: 0; background: rgba(10, 15, 28, 0.98); backdrop-filter: blur(15px); border-top: 1px solid rgba(255, 255, 255, 0.1); padding: 20px 0; z-index: 1000; box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3); border-radius: 0 0 12px 12px; }
  .mobile-menu.active { display: block; }
  .mobile-menu-item { display: block; padding: 16px 24px; color: #ffffff; text-decoration: none; font-weight: 500; transition: all 0.3s ease; border-bottom: 1px solid rgba(255, 255, 255, 0.05); }
  .mobile-menu-item:not(.btn-primary):hover { color: #00d4ff; background: rgba(0, 212, 255, 0.1); padding-left: 28px; }
  .mobile-menu-item.btn-primary { margin: 20px 24px 8px; text-align: center; border-radius: 8px; border-bottom: none; padding: 16px 24px; }
  .mobile-menu-section { border-bottom: 1px solid rgba(255, 255, 255, 0.1); margin-bottom: 8px; }
  .mobile-menu-label { padding: 16px 24px 8px; color: rgba(255, 255, 255, 0.7); font-weight: 600; font-size: 0.85rem; text-transform: uppercase; letter-spacing: 0.8px; border-bottom: none; background: rgba(0, 212, 255, 0.05); }
  .mobile-menu-subitem { padding-left: 48px; color: rgba(255, 255, 255, 0.9); font-size: 0.95rem; border-bottom: 1px solid rgba(255, 255, 255, 0.05); font-weight: 400; border-left: 2px solid rgba(0, 212, 255, 0.2); }
  .mobile-menu-subitem:hover { border-left-color: #00d4ff; padding-left: 52px; }

  @media (max-width: 768px) {
    .nav-links { display: none; }
    .mobile-menu-toggle { display: flex; }
  }

  /* Product Page Base Styles */
  .product-hero {
    padding: 120px 0 80px;
    background: linear-gradient(135deg, #0a0f1c 0%, #1a2332 100%);
    text-align: center;
  }
  
  .product-hero-content {
    max-width: 800px;
    margin: 0 auto;
  }
  
  .breadcrumb {
    margin-bottom: 24px;
    font-size: 0.9rem;
    opacity: 0.8;
  }
  
  .breadcrumb a {
    color: #00d4ff;
    text-decoration: none;
  }
  
  .breadcrumb a:hover {
    text-decoration: underline;
  }
  
  .coming-soon-badge {
    display: inline-block;
    background: linear-gradient(135deg, #ff6b6b, #ff8e8e);
    color: white;
    padding: 8px 16px;
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 600;
    margin-bottom: 20px;
    animation: pulse 2s infinite;
  }
  
  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.7; }
  }
  
  .product-title {
    font-size: 3.5rem;
    font-weight: 700;
    margin-bottom: 24px;
    color: #ffffff;
    line-height: 1.2;
  }
  
  .product-subtitle {
    font-size: 1.25rem;
    margin-bottom: 40px;
    opacity: 0.9;
    line-height: 1.6;
  }
  
  /* Preview Grid */
  .preview-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 24px;
    margin-top: 48px;
  }
  
  .preview-card {
    padding: 32px 24px;
    text-align: center;
  }
  
  .preview-accent {
    width: 40px;
    height: 4px;
    border-radius: 2px;
    margin-bottom: 20px;
  }
  
  .preview-accent.infrastructure {
    background: linear-gradient(135deg, #00d4ff, #0099cc);
  }
  
  .preview-accent.security {
    background: linear-gradient(135deg, #ff6b6b, #cc5555);
  }
  
  .preview-accent.developer {
    background: linear-gradient(135deg, #00ff88, #00cc6a);
  }
  
  .preview-accent.analytics {
    background: linear-gradient(135deg, #9966ff, #7744cc);
  }
  
  .preview-card h3 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 12px;
    color: #ffffff;
  }
  
  .preview-features {
    list-style: none;
    padding: 0;
    margin-top: 16px;
    text-align: left;
  }
  
  .preview-features li {
    padding: 4px 0;
    font-size: 0.9rem;
    opacity: 0.8;
  }
  
  .preview-features li:before {
    content: "→";
    color: #00d4ff;
    margin-right: 8px;
  }
  
  /* Pricing Model */
  .pricing-explanation {
    max-width: 800px;
    margin: 48px auto 0;
    padding: 48px 40px;
  }
  
  .pricing-overview {
    text-align: center;
    margin-bottom: 40px;
    padding-bottom: 32px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .pricing-overview h3 {
    font-size: 1.8rem;
    font-weight: 700;
    color: #ffffff;
    margin-bottom: 16px;
  }
  
  .pricing-overview p {
    font-size: 1.1rem;
    line-height: 1.7;
    opacity: 0.9;
  }
  
  .pricing-components {
    margin-bottom: 40px;
  }
  
  .component-item {
    display: flex;
    align-items: flex-start;
    margin-bottom: 32px;
    padding: 20px;
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    transition: all 0.3s ease;
  }
  
  .component-item:hover {
    background: rgba(255, 255, 255, 0.04);
    border-color: rgba(0, 212, 255, 0.2);
  }
  
  .component-accent {
    width: 6px;
    height: 80px;
    border-radius: 3px;
    margin-right: 20px;
    flex-shrink: 0;
  }
  
  .component-accent.subscription {
    background: linear-gradient(180deg, #00d4ff, #0099cc);
  }
  
  .component-accent.usage {
    background: linear-gradient(180deg, #00ff88, #00cc6a);
  }
  
  .component-accent.volume {
    background: linear-gradient(180deg, #9966ff, #7744cc);
  }
  
  .component-content h4 {
    font-size: 1.3rem;
